<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.wjx.dao.mapper.CarrageMapper">
    <!-- 在你的 Mapper XML 文件中 -->
    <select id="countCarriageTypeByTrainId" resultType="java.util.Map">
        SELECT train_id, carriage_type, COUNT(carriage_type) as count
        FROM t_carriage
        WHERE train_id IN
        <foreach collection="trainIdList" item="trainId" open="(" separator="," close=")">
            #{trainId}
        </foreach>
        GROUP BY train_id, carriage_type
    </select>

</mapper>